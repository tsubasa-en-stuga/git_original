<div class="container">
  <div class="success">
    <h2>アカウント作成</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group row">
        <%= f.label :avatar, class: "col-form-label" %>
        <%= f.file_field :avatar, class: "btn btn-outline-light" %>
      </div>

      <div class="form-group row">
        <%= f.label :nickname, class: "col-form-label" %> <em>(6文字以下)</em>
        <%= f.text_field :nickname, autofocus: true, maxlength: "6", class: "form-control-plaintext" ,placeholder: "Enter nickname" %>
      </div>

      <div class="form-group row">
        <%= f.label :email, class: "col-form-label" %>
        <%= f.email_field :email, class: "form-control-plaintext" ,placeholder: "Enter email" %>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: "col-form-label" %>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control-plaintext",placeholder: "Enter password" %>
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation, class: "col-form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control-plaintext",placeholder: "Enter password confirmation" %>
      </div>

      <div class="actions">
        <%= f.submit t(".sign_up"), class: "btn btn-primary my-2"  %>
      </div>

      <%= link_to t(".sign_in"), new_user_session_path %>
    <% end %>
  </div>
</div>