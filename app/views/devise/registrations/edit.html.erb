<div class="container">
  <div class="success">
    <h2>アカウント編集</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group row">
        <%= f.label :avatar, class: "col-form-label" %>
        <%= f.file_field :avatar, class: "btn btn-outline-light" %>
      </div>

      <div class="form-group row">
        <%= f.label :nickname, class: "col-form-label" %> <em>(6文字以下)</em>
        <%= f.text_field :nickname, autofocus: true, maxlength: "6", class: "form-control-plaintext" %>
      </div>

       <div class="form-group row">
        <%= f.label :email, class: "col-form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control-plaintext" ,placeholder: "Enter email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
      <% end %>

      <div class="form-group row">
        <%= f.label :password, class: "col-form-label" %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control-plaintext",placeholder: "Enter new password" %>
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation, class: "col-form-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control-plaintext",placeholder: "Enter new password confirmation" %>
      </div>

      <div class="form-group row">
        <%= f.label :current_password, class: "col-form-label" %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control-plaintext",placeholder: "Enter original password" %>
      </div>

      <div class="actions">
        <%= f.submit t('.update'), class: "btn btn-primary my-2" %>
      </div>
    <% end %>

    <p><%= link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %></p>

    <%= link_to t('devise.shared.links.back'), :back %>
  </div>
</div>