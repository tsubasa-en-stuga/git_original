<div class="container">
  <div class="success">
    <h2>ログイン</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group row">
        <%= f.label :email, class: "col-form-label" %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control-plaintext" ,placeholder: "Enter email" %>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: "col-form-label" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control-plaintext",placeholder: "Enter password" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.label :remember_me, class: "form-check-label" %>
          <%= f.check_box :remember_me, class: "form-check-input mx-2" %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit t(".sign_in"), class: "btn btn-primary my-2" %>
      </div>
      <%= link_to t(".sign_up"), new_user_registration_path %>
    <% end %>
  </div>
</div>