<% tweet_phrases = tweet.tweet_phrases %>

<div class="tweet_content">
  <div class= "user_avatar" style="background-image: url(<%= tweet.user.avatar %>);">
    <span class= "user_name"><%= tweet.user.nickname %></span>
  </div>
  <div class="more">
    <span><%= image_tag 'arrow_top.png' %></span>
    <ul class="more_list">
      <li><%= link_to '詳細', "/tweets/#{tweet.id}", method: :get %></li>
      <% if user_signed_in? && current_user.id == tweet.user_id %>
        <li><%= link_to '編集', "/tweets/#{tweet.id}/edit", method: :get %></li>
        <li><%= link_to '削除', "/tweets/#{tweet.id}", method: :delete %></li>
      <% end %>
    </ul>
  </div>
  <div class="content_text">
    <div class="text_date">
      <span><%= tweet.created_at%></span>
    </div>
    <div class="text_body">
      <div class= "first"><%= tweet.first_sentence %>。</div>
      <div class= "second"><p><%= tweet.second_sentence %>。</p></div>
    </div>
    <div class="content_text__polygon"></div>
  </div>

  <% if tweet.image %>
    <div class="content_image" style="background-image: url(<%= tweet.image.image %>);"></div>
  <% else %>
    <div class="content_image"></div>
  <% end %>
</div>
  